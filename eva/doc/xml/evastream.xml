<indexterm zone="eva-stream-mark-never-partial-writes"><primary sortas="eva_stream_mark_never_partial_writes">eva_stream_mark_never_partial_writes</primary></indexterm><programlisting>#define             eva_stream_mark_never_partial_writes(stream)</programlisting>
